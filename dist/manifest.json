{
  "name": "Powerful Pixiv Downloader",
  "version": "10.8.0",
  "manifest_version": 3,
  "description": "强大的 Pixiv 下载器，支持批量下载。強力な Pixiv ダウンローダー。The powerful Pixiv downloader supports batch downloading.",
  "icons": {
    "16": "icon/logo16.png",
    "32": "icon/logo32.png",
    "48": "icon/logo48.png",
    "128": "icon/logo128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon/logo16.png",
      "32": "icon/logo32.png",
      "48": "icon/logo48.png",
      "128": "icon/logo128.png"
    },
    "default_title": "Powerful Pixiv Downloader"
  },
  "content_scripts": [
    {
      "css": ["style/viewer.min.css", "style/style.css"],
      "js": [
        "lib/viewer.min.js",
        "lib/zip.js",
        "lib/whammy.js",
        "lib/gif.js",
        "lib/handlebars.min.js",
        "lib/jszip-utils.min.js",
        "lib/jszip.min.js",
        "lib/js-epub-maker.js",
        "lib/UPNG.js",
        "lib/pako.js",
        "content.js",
        "lib/iconfont.js"
      ],
      "matches": ["*://www.pixiv.net/*"],
      "run_at": "document_end"
    },
    {
      "css": ["style/style.css"],
      "js": ["content.js", "lib/iconfont.js"],
      "matches": ["*://www.pixivision.net/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["downloads", "storage", "declarativeNetRequest"],
  "host_permissions": [
    "*://www.pixiv.net/*",
    "*://www.pixivision.net/*",
    "*://*.techorus-cdn.com/*",
    "*://*.pximg.net/*",
    "*://*.pixiv.cat/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "declarative_net_request_rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/z-worker.js",
        "lib/gif.worker.js",
        "lib/listen_history_change.js",
        "manifest.json"
      ],
      "matches": ["*://www.pixiv.net/*"]
    }
  ],
  "homepage_url": "https://github.com/xuejianxianzun/PixivBatchDownloader"
}
